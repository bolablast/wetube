extends base.pug


block content
    if errorMessage 
        span=errorMessage
    form(method="POST")
        input(placeholder="Title", required, type="text", name="title", maxlength=80)
        input(type="text", name="description",required, placeholder="Description", minlength=20)
        input(type="text", name="hashtags",required, placeholder="Hashtags, separated by comma.")
        input(type="submit", value="Upload Video")